{{> header }}

<div class="container">

        <h1>{{title}}</h1>
    
    {{#if errors}}
        {{#each errors}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>    
        {{/each}}
    {{/if}}
    
    <form method="post" action="/CreateGroup"> 
        <div class="form-group">
            <label for="GroupName">Group Name</label>
            <input type="text" name="GroupName" class="form-control" placeholder="Group Name">
        </div>
        <div class="form-group">
            <label for="GroupActivity">Group Activity</label>
            <input type="text" name="GroupActivity" class="form-control" placeholder="Group Activity">
        </div>
        <div class="GroupPhoto">
            <label for="GroupPhoto">Group Photo</label>
            <input type="text" name="GroupPhoto" class="form-control" placeholder="Group Photo">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
</div>